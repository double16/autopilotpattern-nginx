{
  consul: "{{ if .CONSUL_AGENT }}localhost{{ else }}{{ if .CONSUL }}{{ .CONSUL }}{{ else }}consul{{ end }}{{ end }}:8500",
  logging: {
    level: "{{ .LOG_LEVEL | default "INFO" }}",
    format: "{{ .LOG_FORMAT | default "default" }}",
  },
  jobs: [
    {
      name: "preStart",
      exec: "generate-config"
    },
    {
      name: "nginx",
      port: 80,
      interfaces: [
        "{{ .ADVERTISE_CIDR | default "eth0" }}",
        "{{ .ADVERTISE_CIDR6 | default "eth0" }}",
      ],
      exec: "nginx",
      when: {
        source: "preStart",
        once: "exitSuccess"
      },
      health: {
        exec: "health-check http",
        interval: 10,
        ttl: 25
      }
    },
    {
      name: "nginx-public",
      port: 80,
      interfaces: ["eth1", "eth0"],
      health: {
        exec: "health-check http",
        interval: 10,
        ttl: 25,
      }
    },
    {{ if .ACME_DOMAIN }}{
      name: "nginx-ssl",
      port: 443,
      interfaces: ["eth0"],
      health: {
        exec: "acme init && health-check https",
        interval: 10,
        ttl: 25
      }
    },
    {
      name: "nginx-public-ssl",
      port: 443,
      interfaces: ["eth0"],
      health: {
        exec: "health-check https",
        interval: 10,
        ttl: 25,
      }
    },
    {
      name: "nginx-public-ssl",
      port: 443,
      interfaces: ["eth1", "eth0"],
      health: {
        exec: "/usr/bin/curl --insecure --fail --silent --show-error --output /dev/null --header \"HOST: {{ .ACME_DOMAIN }}\" https://localhost/nginx-health",
        interval: 10,
        ttl: 25
      }
    },{{ end }}
    {{ if .CONSUL_AGENT }}{
      name: "consul-preStart",
      exec: ["/usr/local/bin/consul-manage", "preStart"],
    },{
      name: "consul-agent",
      port: 8500,
      exec: [
        "consul", "agent",
        "-config-dir=/etc/consul",
        "-rejoin",
        "-retry-join", "{{ if .CONSUL }}{{ .CONSUL }}{{ else }}consul{{ end }}",
        "-retry-max", "10",
        "-retry-interval", "10s"
      ],
      when: {
        source: "consul-preStart",
        once: "exitSuccess"
      },
      interfaces: [
        "{{ .ADVERTISE_CIDR | default "inet" }}",
        "{{ .ADVERTISE_CIDR6 | default "inet6" }}",
      ],
      health: {
        exec: ["/usr/bin/curl", "-sfo", "/dev/null", "http://localhost:8500/v1/status/leader"],
        interval: 10,
        ttl: 25
      },
      restarts: "unlimited"
    },
    {
      name: "consul-restart",
      exec: [ "/usr/bin/pkill", "consul" ],
      when: {
        source: "consul-agent",
        each: "unhealthy"
      },
    },
    {{ end }}
    {{ if .ACME_DOMAIN }}{
      name: "acme-watch",
      exec: ["acme", "watch"],
      restarts: "unlimited"
    },
    {
      name: "acme-checkin",
      exec: [ "acme", "checkin" ],
      timeout: "10s",
      when: {
        interval: "1h",
      }
    },{{ end }}
    {
      name: "node-exporter",
      port: 9100,
      exec: ["/usr/local/bin/node_exporter","--web.listen-address=:9100"],
      health: {
        exec: ["/usr/bin/curl", "--fail", "-s", "-o", "/dev/null", "http://localhost:9100/metrics"],
        interval: 5,
        ttl: 15,
      },
      interfaces: [
        "{{ .ADVERTISE_CIDR | default "inet" }}",
        "{{ .ADVERTISE_CIDR6 | default "inet6" }}",
      ],
    }
  ]
}
